{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "noImplicitThis": false,
    "paths": {
      "~/*": ["shared/*"],
      "@test/*": ["packages/test-client/src/*"],
    }
  },
  "include": ["packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.tsx", "packages/**/*.vue", 
    "shared/**/*.ts", "shared/**/*.d.ts", "shared/**/*.tsx", "shared/**/*.vue",]
}
